<%- include('../partials/head')%>
<%- include('../partials/headerLogadoUser.ejs') %>

        <div class="container mb-5 mt-5 text-center">
          <!-- Barra de pesquisa por nome de médico  -->
          <form action="#" method="#" class="form-inline my-2 my-lg-0">
            <input class="border border-success rounded mx-4" type="text" id="filter-medico" onkeyup="pesquisarMedico()"
              placeholder="Pesquisar por médico" />
            <input class="border border-success rounded mx-4" type="text" id="filter-espec" onkeyup="pesquisarEspec()"
              placeholder="Pesquisar por especialidade" />
          </form>

          <h1 class="text-center mt-4">Médicos</h1>
          <div class="card-lists" id="card-container">
            <div class="row">
              <% resultado.forEach(item=>{ %>
                <div class="card">
                  <img src="/img/<%=item.profile%>" alt="">
                  <div class="card-body">
                    <h4 class="card-title">Nome: <%=item.pronome%>. <%=item.nome%>
                    </h4>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item">Sobrenome: <%=item.sobrenome%>
                      </li>
                      <li class="list-group-item">CRM: <%=item.crm%>
                      </li>
                      <li class="list-group-item">Telefone: <%=item.tel%>
                      </li>
                      <li class="list-group-item">Ramal: <%=item.ramal%>
                      </li>
                      <li class="espec list-group-item">Especialidade: <%=item.espec%>
                      </li>
                    </ul>
                  </div>
                </div>
                <% })%>
            </div>
          </div>

        <a class="text-center" href="#nav">
          <h1><i class="bi bi-arrow-up-circle"></i></h1>
        </a>

        <%- include('../partials/footer')%>